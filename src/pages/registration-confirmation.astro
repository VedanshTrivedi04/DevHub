import CommonHeader from '@/components/common/CommonHeader.tsx'
import CommonFooter from '@/components/common/CommonFooter.tsx'
import ConfirmationContent from '@/components/registration-confirmation/ConfirmationContent.tsx'
---

<BaseLayout title="Registration Confirmation - DevHub">
